@model FanMailModel;

<h2>Send him fan mail</h2>
<form style="align-content: center" method="POST">
    <label>From:</label>
    <input id="from" type="text" asp-for="sFrom"/><br /><br />
    <label>Subject:</label>
    <input id="subject" type="text" asp-for="sSubject"/><br /><br />
    <label>Message:</label>
    <textarea id="message" rows="4" asp-for="sMessage"></textarea><br /><br />
    <input id="btnsend" type="submit" value="Send Message">

    <div asp-validation-summary="All"></div>
</form>